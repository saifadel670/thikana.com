<html>

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Engineer | Dashboard</title>


        <!-- /*bootsrap*/ -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
        <!-- /*bootsrap ends*/ -->

        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css"
            integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA=="
            crossorigin="anonymous" />
        <!-- <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
            integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous"> -->
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" 
        rel="stylesheet">
       
            <link rel="stylesheet" href="/public/styleE.css">
       
      
    </head>

    <body>
        <nav class="navbar navbar-custom navbar-dark navbar-expand-lg d-flex flex-row"
            style="background-color: #032412;">
            <div class="container">
                <a class="navbar-brand" href="#">
                    <img src="/client/images/thikana1.JPG" width="200" height="100"
                        class=" d-inline-block align-center rounded-circle" alt="Logo">
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse"
                    data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav d-flex mr-auto w-100 justify-content-end">
                        <li class="nav-item active">
                            <!-- <i class="fa fa-user-circle-o" style="background-color: #fff;" aria-hidden="true"></i> -->
                            <a class="nav-link text-decoration-none" href="#">

                                Dashboard
                                <span class="sr-only">(current)</span>
                            </a>
                        </li>
                        <!-- <li class="nav-item">
                        <a class="nav-link" href="#">
                            
                            Notifications</a>
                    </li> -->
                        <li class="nav-item">
                            <a class="nav-link" href="/signInUp">Logout</a>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>

        <section class="container-fluid dashboard">
            <div class="row justify-content">

                <!-- <div class="row"> -->
                <div class="user-header">
                    <div class="user-img">
                        <img id="dp" src=" <%- engineer.image %>" class="img-fluid cirlce mx-auto d-block"
                            width="150" border-radius='50%' alt="profile-photo">
                    </div>
                    <div class="user-info">
                        <h3 id="user-name"><%=engineer.name%></h3>
                        <div class='address' id="address">
                            <p id="area"><%=engineer.address %>,</p>
                            <span class="country">
                                Bangladesh
                            </span>
                        </div>

                    </div>
                    <div > 
                        <div class="user-option">
                    <div id="notification">
                        <a  type="button" id="notification" data-toggle="modal" data-target="#textModal">
                        <i class="fa fa-bell"></i>
                        <span id="notification-num"><%=message.length%></span>
                        </a>
                    </div>
                </div>

                    <div class="modal fade bd-example-modal-md" id="textModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog modal-md" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h2 class="modal-title" id="exampleModalLabel">NOTIFICATIONS</h2>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body" id="setNotification">
                                <%for(var i=0; i<message.length; i++){%>
                                    <%if(message[i].type==='request' && message[i].result=== 'sending'){%>
                                 <span class="notification-view">
                                    <h5><%= message[i].content %></h5>
                                </span>
                                    <div class="d-flex justify-content-between">
                                        <button type="button" class="btn btn-success" value="<%-message[i]._id %>" id="acceptBtn" >ACCEPT</button>
                                        <button type="button" value="<%-message[i]._id %>" id="rejectBtn" class="btn btn-danger">REJECT</button>
                                    </div>                                    
                                
                                <br>
                            <%}%> 
                            <%}%>
                                
                            
                            </div>
                            
                        </div>
                    </div>
                </div>



              
                </div>
                </div>
                <!-- </div> -->
            </div>
            <!-- </div> -->
            <div class="row d-flex justify-content-between">
                <!--  -->
                <div class="col-lg-4 col-md-4 col-sm-4 ">


                    <div class="container-fluid content">
                        <div class="profile-view" id="sidebar">
                            <div class="basic" id="basic-info">
                                <p class="phone" id="phone">
                                    <i class="fa fa-phone"></i>
                                    <%= engineer.phoneNumber %>
                                </p>
                               
                                <p id="userID" style="display: none;">
                                                                    
                                <%=engineer._id.toString()%></p>
                                <p id="mail">
                                    <i class="fa fa-envelope"></i>
                                    <%= engineer.email %>
                                </p>
                                <div id="user-description">
                                    <h5>Description</h5>
                                    <p class="description">
                                        <%= engineer.description %></p>

                                </div>
                                <div class="rating">
                                    <h3 id="rating">4.3</h3>
                                    <div class="rate">
                                        <div class="stars">
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-7 col-md-7 col-sm-7">

                    <div class="container-fluid" id="right-side ">

                        <div class=" container-fluid" id="bar">
                            <ul>
                                <li onclick="tabs(0)" class=" user-profile active">Profile</li>
                                <li onclick="tabs(1)" class=" user-projects">Project</li>
                                <li onclick="tabs(2)" class=" user-client">Client</li>
                            </ul>
                        </div>

                        <div class="container-fluid dashboard-body">
                            <!-- -->
                            <div class="profile tab">
                                <div class="container-fluid">
                                    <form id="profile-form">
                                        <div class="form-group">
                                            <label for="inputGroupFile01">Upload New Photo</label>
                                            <!-- <input type="text" class="form-control" id="inputAddress2" placeholder=""> -->

                                            <div class="input-group mb-3">
                                                <div class="custom-file">
                                                    <input type="file" class="custom-file-input" id="inputGroupFile01">
                                                    <label class="custom-file-label" for="inputGroupFile01">Choose
                                                        file</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-row">
                                            <div class="form-group col-md-6">
                                                <label for="fName">First Name</label>
                                                <input type="text" class="form-control" id="fName"
                                                    placeholder="First name">
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label for="lName">Last Name</label>
                                                <input type="text" class="form-control" id="lName"
                                                    placeholder="Last name">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="input-Phone-Number">Phone Number</label>
                                            <input type="number" class="form-control" id="input-Phone-Number"
                                                placeholder="01*********">
                                        </div>
                                        <div class="form-row">
                                            <div class="form-group col-md-6">
                                                <label for="newPassword">New Password</label>
                                                <input type="password" class="form-control" id="newPassword"
                                                    placeholder="New Password">
                                            </div>

                                            <div class="form-group col-md-6">
                                                <label for="confirmPassword">Confirm Password</label>
                                                <input type="password" class="form-control" id="confirmPassword"
                                                    placeholder="Confirm Password">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="inputAddress">Address</label>
                                            <input type="text" class="form-control" id="inputAddress"
                                                placeholder="House, Road, Sector, Area">
                                        </div>

                                        <div class="form-row">
                                            <div class="form-group col-md-6">
                                                <label for="inputCity">City</label>
                                                <input type="text" class="form-control" id="inputCity">
                                            </div>

                                            <div class="form-group col-md-4">
                                                <label for="inputZip">Zip</label>
                                                <input type="text" class="form-control" id="inputZip">
                                            </div>
                                            <!-- description -->

                                            <div class="form-group col-md-10">
                                                <label for="inputDetails">Details</label>
                                                <textarea class="form-control" id="inputDetails" placeholder="Write yourself"></textarea>
                                                <!-- <input type="text" class="form-control" id="inputDetails"> -->
                                            </div>
                                           
                                        </div>
                                        <div class="form-group">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" id="gridCheck">
                                                <label class="form-check-label" for="gridCheck">
                                                    Confirm
                                                </label>
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-primary" id="profileEdit">Save
                                            Changes</button>
                                    </form>

                                </div>
                            </div>

                            <div class="project tab">
                                <div class="container">
                                    <button class="btn btn-primary" id="addProject" type="button" data-toggle="modal" data-target="#exampleModal">
                                            <span class="material-icons">
                                                add_circle
                                            </span>
                                            <br>
                                            Add New Project
                                        </span>
                                    </button>


                                    <div class="modal fade bd-example-modal-lg" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                                        aria-hidden="true">
                                        <div class="modal-dialog modal-lg" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h2 class="modal-title" id="exampleModalLabel">Add New Project</h2>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                   
                                                    <form>
                                                     <div class="form-group">
                                                        <label for="project-photo">Upload New Photo</label>
                                                        <!-- <input type="text" class="form-control" id="inputAddress2" placeholder=""> -->
                                                    
                                                        <div class="input-group mb-3">
                                                            <div class="custom-file">
                                                                <input type="file" class="custom-file-input" id="project-photo">
                                                                <label class="custom-file-label" for="project-photo">Choose
                                                                    file</label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <!-- <div class="form-group">
                                                        <input type="text" class="form-control" id="product-photo" placeholder="Product Name">
                                                    </div> -->
                                                    <div class="form-group">
                                                        <input type="text" class="form-control" id="project-name" placeholder="Project Name">
                                                    </div>
                                                    <div class="form-group">                                
                                                        <textarea class="form-control" id="project-description" placeholder="Description"></textarea>
                                                    </div>
                                                    <div class="form-group">                                
                                                        <textarea class="form-control" id="project-material" placeholder="Estimated Materials"></textarea>
                                                    </div>
                                                    <div class="form-group">
                                                        <input type="number" class="form-control" id="project-cost" placeholder="Project Approximate Cost">
                                                    </div>
                                                    
                                                </form>
                                            </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                                    <button type="button" class="btn btn-primary" id="project-add">ADD PROJECT</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>



                                </div>

                                <!-- show product here -->
                                <div class="d-flex flex-wrap">
                                    <% if(project){%>
                                    <%for(let i=0;i<project.length;i++){%>
                                          
                                    <div class="card">
                                        <img class="card-img-top" src="<%-project[i].image%>"
                                            alt="Card image cap">
                                        <div class="card-body">
                                            <h5 class="card-title"><%=project[i].name%></h5>
                                            <p class="card-text"><%=project[i].description%></p>
                                        </div>
                                        <ul class="list-group list-group-flush">
                                            <li class="list-group-item">Matterials : <%=project[i].material%></li>
                                            <li class="list-group-item">Approximate Cost : <%=project[i].cost%></li>
                                            
                                        </ul>
                                        <p class="projectID" style="display: none"><%=project[i]._id%></p>
                                        <div class="card-body">
                                            <button type="button" id="<%-i%>" class="btn btn-danger removeProject">Remove Project</button>
                                        </div>
                                    </div>
                                    <% } %> 
                                    <% } %> 
                                                                 
                                  
                                </div>

                            </div>

                            <div class="client tab">
                                <table class="table table-hover">
                                    <tbody>
                                      <%for(var i=0; i<message.length; i++){%>
                                          <%if(message[i].type  !=='request'){%>  
                                        <tr >
                                            <td><%= message[i].senderName%></td>
                                            <p class="receiverClient" style="display: none;"><%=message[i].sender%></p>
                                            <td> 
                                         <!-- <div class="container">  -->
                                            <div id="notification">
                                                <a  type="button" data-toggle="modal" data-target="#msgModal">
                                                <i class="material-icons">chat</i></a>
                                                <div class="modal fade bd-example-modal-sm" id="msgModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                                                aria-hidden="true">
                                                <div class="modal-dialog modal-dialog-centered modal-sm"    role="document">
                                                    <div class="modal-content">
                                                    
                                                        <div class="modal-body">
                                                            <p><%=message[i].content%></p>
                                                            <br>
                                                            <textarea class="form-control clientMSG"  placeholder="Write yourself"></textarea>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>

                                                            <button type="button" class="btn btn-primary sendClientMSg" id="<%-i%>">SEND</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        <!-- </div> -->
                                            </td>
                                            <td><a type="button"><i class="material-icons messageRow" id="<%-message[i]._id%>"">cancel</i></a></td>
                                        </tr>
                                        <%}%>
                                      <%}%>
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>
                </div>

            </div>

            </div>


        </section>
        <!-- <div id="welcome"></div> -->

        <!-- bootstrap scripts -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
        <!-- scripts ends  -->
        <script>
            $('#bar ul li').click(function () {
                    $(this).addClass('active').siblings().removeClass('active');
                })
                const tabBtn = document.querySelectorAll('#bar');
                const tab = document.querySelectorAll('.dashboard-body>.tab');

                function tabs(panelIndex) {
                    tab.forEach(function (node) {
                        node.style.display = 'none';
                    })
                    tab[panelIndex].style.display = 'block';
                }
                tabs(0);
        </script>
        <!-- path -->
        <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
        <script src="/script/user_api.js"></script>
        <script src="/script/script.js"></script>
    </body>

</html>